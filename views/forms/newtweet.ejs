<%- include('../header') %>
<div style="background-color: grey; height: 1000px;">
<div>
    <%- include('../navbar_user') %> 
</div>

<h2>New tweet page</h2>
<div>
<form method="POST">
  <div class="form-floating">
    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" style="height: 100px; width: 500px;" name="text"></textarea>
    <label for="floatingTextarea">Comments</label>
  </div>

  <div class="form-check">
    <input class="form-check-input" type="radio" name="visibility" id="flexRadioDefault1" value="private">
    <label class="form-check-label" for="flexRadioDefault1">
      Private tweet
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="visibility" id="flexRadioDefault2" value="public" checked>
    <label class="form-check-label" for="flexRadioDefault2">
      Public tweet
    </label>
  </div>
  <button class="btn btn-success" type="submit">Send</button>
</form>
</div>

<div>
    <a class="btn btn-warning" href="/home" role="button">Back</a>
</div>

</div>

<%- include('../footer') %>